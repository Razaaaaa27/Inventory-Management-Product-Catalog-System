<div class="container py-5">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Home</a></li>
            <li class="breadcrumb-item active" aria-current="page">Categories</li>
        </ol>
    </nav>

    <!-- Header -->
    <div class="text-center mb-5">
        <h1 class="display-4 mb-3">Browse Categories</h1>
        <p class="lead text-muted">Explore our wide range of product categories</p>
    </div>

    <!-- Categories Grid -->
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
        <% if (categories && categories.length > 0) { %>
            <% categories.forEach(function(category) { %>
                <div class="col">
                    <a href="/category/<%= category.slug %>" class="text-decoration-none">
                        <div class="card h-100 border-0 shadow-sm hover-effect">
                            <div class="card-body text-center p-5">
                                <div class="display-4 text-primary mb-3">
                                    <i class="fas fa-folder"></i>
                                </div>
                                <h3 class="card-title h4 text-dark"><%= category.name %></h3>
                                <% if (category.description) { %>
                                    <p class="card-text text-muted"><%= category.description %></p>
                                <% } %>
                            </div>
                        </div>
                    </a>
                </div>
            <% }); %>
        <% } else { %>
            <div class="col-12 text-center py-5">
                <div class="display-4 text-muted mb-3">
                    <i class="fas fa-folder-open"></i>
                </div>
                <h2>No Categories Found</h2>
                <p class="text-muted">Check back later for new categories.</p>
            </div>
        <% } %>
    </div>
</div>

<style>
.hover-effect {
    transition: transform 0.2s ease-in-out, box-shadow 0.2s ease-in-out;
}
.hover-effect:hover {
    transform: translateY(-5px);
    box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
}
</style> 